<div class="camera-ctn">
  <canvas id="canvas"> </canvas>
  <div class="camera-view">
    <video id="camera-stream" autoplay loop muted>
      <source src="" >
    </video>
  </div>
  <div class="camera-bottom">
    <div class="inner">
      <div class="lens-modifier">
        <button>
          .5
        </button>
        <button class="active">
          1x
        </button>
        <button>
          3
        </button>
      </div>
      <div class="modes">
        <button>
          SINGLE TAKE
        </button>
        <button class="active">
          PHOTO
        </button>
        <button>
          VIDEO
        </button>
        <button>
          PORTRAIT
        </button>
      </div>
      <div class="shutter-ctn">
        <button id="photos-btn" class="previous-shots">
        </button>
        <button id="shutter" class="shutter">
        </button>
        <button class="switch-device">
          Sw
        </button>
      </div>
    </div>
  </div>
</div>

